# Application
APP_NAME=PDF-RAG API
APP_VERSION=0.1.0
DEBUG=false
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# Database (PostgreSQL with pgvector)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/pdfrag

# OpenAI API
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4o
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# RAG Configuration
CHUNK_SIZE=512
CHUNK_OVERLAP=50
SIMILARITY_TOP_K=5

# Upload
MAX_FILE_SIZE=52428800
UPLOAD_DIR=./uploads

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000
